/**
 * Implements hook_block_view().
 */
function ding_wayf_block_view($delta) {
  $block = array('content' => '');
  if ($delta == 'login') {
    global $user;
    // Only show login link for anon. users.
    if ($user->uid == 0) {
      $config = variable_get('ding_wayf', NULL);
      $wayf = isset($config['wayflogin']) ? $config['wayflogin'] : FALSE;
      $nemlogin = isset($config['nemlogin']) ? $config['nemlogin'] : FALSE;
      if ($wayf or $nemlogin) {
        $block['content'] .= '<div class=ding-wayf-logon-block> <span class = ding-wayf-logoninfo>' . t('Log in to WAYF or NemId') . '</span>';
      }
      if ($wayf) {
        $logo_path = base_path() . drupal_get_path('theme', $GLOBALS['theme']);
        $logo_path .= '/img/wayf.png';
        // @todo WAYF image is no longer in the module.
        $block['content'] .= l('<img src="' . $logo_path . '" alt="wayf_logo"/>', 'wayf/login', array('html' => TRUE, 'attributes' => array('class' => 'link-ding-wayf-wayf-login'), 'query' => array('idp' => 'wayf', drupal_get_destination())));
      }
      if ($nemlogin) {
        $logo_path = base_path() . drupal_get_path('theme', $GLOBALS['theme']);
        $logo_path .= '/img/nemid_logo.png';
        // @todo WAYF image is no longer in the module.
        $block['content'] .= l('<img src="' . $logo_path . '" alt="nemid_logo"/>', 'wayf/login', array('html' => TRUE, 'attributes' => array('class' => 'link-ding-wayf-wayf-login'), 'query' => array('idp' => 'nemlogin', drupal_get_destination())));
      }
      if ($wayf or $nemlogin) {
        $block['content'] .= '</div>';
      }
    }
  }

  return $block;
}

/**
 * Get the valid idp's.
 */
function ding_wayf_idps() {
  $ret = array(
    'test' => 'test',
    'wayf' => 'wayf',
    'nemlogin' => 'nemlogin',
  );

  return $ret;
}

/**
 * Sets attributes if specified by Ding provider.
 */
function ding_wayf_get_provider_attributes(&$simplesaml) {
  $wayf_attributes = module_invoke_all('ding_wayf_attributes');

  if ($wayf_attributes) {
    $simplesaml['attributes'] = $wayf_attributes;
  }
}

/**
 * Get authentication attributes.
 *
 * @param $wayf_data
 *
 * @return array
 */
function ding_wayf_get_authentication_attributes($wayf_data) {
  // Required attributes.
  $simplesaml = variable_get('ding_wayf', array());
  ding_wayf_get_provider_attributes($simplesaml);
  $required_attributes = $simplesaml['attributes'];

  return ding_wayf_get_required_attributes($wayf_data, $required_attributes);
}

/**
 * Extract required attributes from available WAYF attributes.
 *
 * @param array $wayf_attributes
 *   WAYF attributes.
 * @param array $required_attributes
 *   Required attributes.
 *
 * @return array
 *   Attributes which will be empty if not all required attributes is
 *   present.
 */
function ding_wayf_get_required_attributes($wayf_attributes, $required_attributes) {

  $attribute_list = array();

  // @todo session variable?
  if (isset($_SESSION['accept_wayf']['name'])) {
    $wayf_attributes['mail'][0] = $_SESSION['accept_wayf']['name'];
  }

  if (isset($wayf_attributes) && is_array($required_attributes)) {
    foreach ($required_attributes as $attribute => $value) {
      if (isset($wayf_attributes[$attribute])) {
        $attribute_list[$attribute] = $wayf_attributes[$attribute];
      }
    }

    return $attribute_list;
  }
  else {
    return array();
  }
}
