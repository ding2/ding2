    case 'notbuilt':
      $prefix = '<div id="' . $site . '-test-status" class="test-status-notbuild test-ready">';
      $ball = '<img src="/' . drupal_get_path('module', 'ddb_cp') . '/images/32x32/grey.gif"/>';
      break;

    case 'notbuilt_anime':
