/**
 * Get the status granted and denied tids.
 */
function ding_interests_get_status_tids() {
  // Get access granted or denied term tids.
  $vocab = taxonomy_vocabulary_machine_name_load('interest_status');
  $tree = taxonomy_get_tree($vocab->vid);
  $access = array();
  
  foreach ($tree as $term) {
    if ($term->tid == variable_get('ding_interests_optedout_tid')) {
      $access['denied'] = $term->tid;
    }
    elseif ($term->tid == variable_get('ding_interests_selected_tid')) {
      $access['granted'] = $term->tid;
    }
  }

  return $access;
}

