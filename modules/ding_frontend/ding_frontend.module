/**
 * Implements hook_views_pre_render().
 */
function ding_frontend_views_pre_render(&$view) {
  if ($view->name == 'ding_multiple_search') {
    foreach ($view->result as $result) {
      $res = explode('/', $result->entity);
      if ($res[0] == 'user') {
        $current_user = user_load($res[1]);
        if (!in_array('staff', $current_user->roles)) {
          unset($view->result);
        }
      }
    }
  }
}

/**
 * Implements hook_views_query_build().
 */
function ding_frontend_views_query_alter(&$view, &$query) {
  switch ($view->name . ' ' . $view->current_display) {
    case 'ding_related_content news_events':

      // Move the 2 contextual tags conditions to an OR group.
      $or_conditions = array();
      foreach ($query->where[0]['conditions'] as $key => $condition) {
        if (
          strpos($condition['field'], 'field_data_field_ding_news_tags.field_ding_news_tags_tid') === 0
          || strpos($condition['field'], 'field_data_field_ding_event_tags.field_ding_event_tags_tid') === 0
        ) {
          $or_conditions[] = $condition;
          unset($query->where[0]['conditions'][$key]);
        }
      }

      // Add the conditions to a newly created OR group.
      if (!empty($or_conditions)) {
        $group_id = $query->set_where_group('OR');
        $query->where[$group_id]['conditions'] = $or_conditions;
      }

      // Order by the distance to either the created date if it's news or the
      // start time if it's an event.
      $query->add_orderby(
        NULL,
        "ABS(DATEDIFF(IF(node.type = 'ding_news', FROM_UNIXTIME(node.created), field_data_field_ding_event_date.field_ding_event_date_value), NOW()))",
        'ASC',
        'date_distance');
      break;
  }
}

/**
 *Implements hook_search_api_views_query_alter().
 */
function ding_frontend_search_api_views_query_alter(view &$view, SearchApiViewsQuery &$query) {
  // Ensure that we use correct view.
  if ($view->name == 'ding_multiple_search') {
    // Look that args are not empty.
    if (!empty($view->args[0])) {
      // Loading original args.
      $args = $view->args[0];
      // Cleanup original args (search query), so the $query variable
      // will not have to construct monstrous query to get needed records
      // from search index.
      $new_args = preg_replace('/(!|@|%|\^|\*|\(|\)|\+|\=|\<|\>|\?|\/|,|\.|\:|\;|\"|\&|\#|\[|\]|~|$|_| or | and |-)/i', ' ', $args);
      // Return cleared search query string into view's query.
      $query->keys($new_args);
    }
  }
}

/**
 * Implements hook_form_alter().
 */
function ding_frontend_form_alter(&$form, &$form_state, $form_id) {
  if ($form['#id'] == 'views-exposed-form-ding-multiple-search-panel-pane-1') {
    $options = $form['ct']['#options'];
    $default_values = $form['ct']['#default_value'];

    $cleared = array_filter($options, function ($key) use ($default_values) {
      if (in_array($key, array_keys($default_values))) {
        return $key;
      }
    }, ARRAY_FILTER_USE_KEY);

    $form['ct']['#options'] = $cleared;
    $form['ct']['#default_value'] = [];
  }
}

/**
 * Implements hook_preprocess_HOOK().
 */
function ding_frontend_preprocess_views_exposed_form(&$variables) {
  if ($variables['form']['#id'] == 'views-exposed-form-ding-multiple-search-panel-pane-1') {
    $form = $variables['form'];
    $excluded_widgets = ['node_field_ding_page_tags', 'node_field_ding_event_tags', 'node_field_ding_news_tags'];
    foreach ($form['#info'] as $widget => $item) {
      if (!in_array($item['value'], $excluded_widgets)) {
        $items = [];
        $title = $item['label'];
        unset($variables['widgets'][$widget]->label);

        $items_list = $form[$item['value']]['#options'];
        foreach ($items_list as $id => $option) {
          if (is_object($option)) {
            $clean_option = array_keys($option->option);
            $key = array_shift($clean_option);
            $items[$key] = $option->option[$key];
          }
          else {
            $items[$id] = $option;
          }
        }

        $render = theme('views_exposed_form_widgets', [
            'title' => $title,
            'items' => $items,
            'element' => $form[$item['value']],
          ]
        );

        $variables['widgets'][$widget]->widget = $render;
      }
    }
  }
}
