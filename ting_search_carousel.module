 * Implements hook_theme().
 */
function ting_search_carousel_theme($existing, $type, $theme, $path) {
  $hooks = array();

  $hooks['ting_search_carousel_javascript'] = array();

  $hooks['ting_search_carousel'] = array(
    'variables' => array(
      'searches' => NULL,
      'tab_position' => NULL,
    ),
    'template' => 'ting_search_carousel'
